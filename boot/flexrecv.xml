<config>
    <kernel args="kernel" />
    <dom>
        <app args="root sem=net-udp sem=net-tcp">
            <dom>
                <app args="m3fs mem $fs.size" daemon="1">
                    <serv name="m3fs" />
                    <physmem addr="0" size="$fs.size" />
                </app>
            </dom>
            <dom>
                <app args="pager $fs.size">
                    <sess name="m3fs" />
                    <physmem addr="0" size="$fs.size" perm="r" />
                    <tiles type="core+nic" count="1" />
                    <tiles type="core" count="1" />
                    <dom tile="boom+nic">
                        <app args="/sbin/net net 192.168.181.56" daemon="1">
                            <serv name="net" />
                        </app>
                    </dom>
                    <dom>
                        <app args="/bin/flexrecv">
                            <sess name="net" args="socks=2 udp=3000" />
                        </app>
                    </dom>
                </app>
            </dom>
        </app>
    </dom>
</config>
