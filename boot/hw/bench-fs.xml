<config>
    <kernel args="kernel" />
    <dom>
        <app args="root">
            <dom>
                <app args="m3fs mem $fs.size" daemon="1">
                    <serv name="m3fs" />
                    <physmem addr="0" size="$fs.size" />
                </app>
            </dom>
            <dom>
                <app args="pager maxcli=2 $fs.size" usermem="768M">
                    <sess name="m3fs" />
                    <physmem addr="0" size="$fs.size" perm="r" />
                    <pes name="child" type="boom" count="2" />
                    <dom pe="boom">
                        <app args="/bin/m3fs -e 64 -c -m 1 mem $fs.size" daemon="1">
                            <serv lname="m3fs" gname="app_m3fs" />
                            <physmem addr="0" size="$fs.size" />
                        </app>
                    </dom>
                    <dom pe="boom">
                        <app args="/bin/fs">
                            <sess lname="m3fs" gname="app_m3fs" />
                        </app>
                    </dom>
                </app>
            </dom>
        </app>
    </dom>
</config>
