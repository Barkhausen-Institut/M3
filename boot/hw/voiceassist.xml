<config>
    <kernel args="kernel -f $fs.path" />
    <dom>
        <app args="root">
            <dom>
                <app args="m3fs mem $fs.size" daemon="1">
                    <serv name="m3fs" />
                    <physmem addr="0" size="$fs.size" />
                </app>
            </dom>
            <dom>
                <app args="pager maxcli=2 sem=net $fs.size" usermem="768M">
                    <sess name="m3fs" />
                    <physmem addr="0" size="$fs.size" perm="r" />
                    <pes name="child0" type="boomnic" count="1" />
                    <pes name="child1" type="boom" count="1" />
                    <dom pe="boomnic">
                        <app args="/bin/net net 192.168.42.242" daemon="1">
                            <serv name="net" />
                        </app>
                    </dom>
                    <dom pe="boom">
                        <app args="/bin/vasnd 192.168.42.15 1337 /testcase1.wav">
                            <mount fs="m3fs" path="/" />
                            <sess name="net" args="bufs=1M socks=1 ports=2000" />
                        </app>
                    </dom>
                </app>
            </dom>
        </app>
    </dom>
</config>
