<config>
    <kernel args="kernel -f $fs.path" />
    <dom>
        <app args="root">
            <dom>
                <app args="m3fs mem $fs.size" daemon="1">
                    <serv name="m3fs" />
                    <physmem addr="0" size="$fs.size" />
                </app>
            </dom>
            <dom pe="boom+nic">
                <app args="pager maxcli=3 $fs.size" usermem="768M">
                    <sess name="m3fs" />
                    <physmem addr="0" size="$fs.size" perm="r" />
                    <app args="/sbin/m3fs -m 1 mem $fs.size" daemon="1">
                        <serv lname="m3fs" gname="app_m3fs" />
                        <physmem addr="0" size="$fs.size" />
                    </app>
                    <app args="/sbin/net -m 1 net 192.168.42.242" daemon="1">
                        <serv name="net" />
                    </app>
                    <app args="/bin/lvldbserver /tmp/foo 1 udp 192.168.42.15 1337 /data/small-workload.wl">
                        <sess name="net" args="bufs=1M socks=1 ports=2000" />
                        <sess lname="m3fs" gname="app_m3fs" />
                    </app>
                </app>
            </dom>
        </app>
    </dom>
</config>
