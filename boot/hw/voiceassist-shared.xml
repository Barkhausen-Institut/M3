<config>
    <kernel args="kernel -f $fs.path" />
    <dom>
        <app args="root">
            <dom>
                <app args="m3fs mem $fs.size" daemon="1">
                    <serv name="m3fs" />
                    <physmem addr="0" size="$fs.size" />
                </app>
            </dom>
            <dom pe="boom+nic">
                <app args="pager maxcli=3 $fs.size">
                    <sess name="m3fs" />
                    <physmem addr="0" size="$fs.size" perm="r" />
                    <pes type="rocket" count="1" />
                    <app args="/sbin/net -m 1 net 192.168.41.11" daemon="1">
                        <serv name="net" />
                    </app>
                    <dom pe="rocket">
                        <app args="/bin/vamic /testcase1.wav" daemon="1">
                            <mount fs="m3fs" path="/" />
                            <serv name="vamic" />
                        </app>
                    </dom>
                    <app args="/bin/vasnd -w 2 -r 8 udp 192.168.41.10 1337">
                        <sess name="net" args="bufs=1M socks=1 ports=2000" />
                        <sess name="vamic" />
                    </app>
                </app>
            </dom>
        </app>
    </dom>
</config>
