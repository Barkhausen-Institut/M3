<config>
    <kernel args="kernel -f $fs.path" />
    <dom>
        <app args="root">
            <dom>
                <app args="m3fs mem $fs.size" daemon="1">
                    <serv name="m3fs" />
                    <physmem addr="0" size="$fs.size" />
                </app>
            </dom>
            <dom>
                <app args="pipes" daemon="1">
                    <serv name="pipes" />
                </app>
            </dom>
            <dom>
                <app args="vterm" daemon="1">
                    <serv name="vterm" />
                </app>
            </dom>
            <dom>
                <app args="pager $fs.size" usermem="256M">
                    <sess name="m3fs" />
                    <physmem addr="0" size="$fs.size" perm="r" />
                    <pes type="core" count="1" />
                    <dom>
                        <app args="/bin/shell">
                            <mount fs="m3fs" path="/" />
                            <sess name="pipes" />
                            <sess name="vterm" />
                            <pes type="core" count="3" />
                            <pes type="rot13" count="2" optional="1" />
                        </app>
                    </dom>
                </app>
            </dom>
        </app>
    </dom>
</config>
