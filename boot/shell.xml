<config>
    <kernel args="kernel -f $fs.path" />
    <app args="root">
        <dom>
            <app args="m3fs mem $fs.size" daemon="1">
                <serv name="m3fs" />
                <physmem addr="0" size="$fs.size" />
            </app>
        </dom>
        <dom>
            <app args="pipes" daemon="1">
                <serv name="pipes" />
            </app>
        </dom>
        <dom>
            <app args="vterm" daemon="1">
                <serv name="vterm" />
            </app>
        </dom>
        <dom>
            <app args="pager /bin/shell" usermem="128M">
                <sess name="m3fs" />
                <sess name="pipes" />
                <sess name="vterm" />
                <pes type="core" count="4" />
                <pes type="rot13" count="2" optional="1" />
            </app>
        </dom>
    </app>
</config>
