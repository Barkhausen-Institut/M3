<config>
    <kernel args="kernel -f $fs.path" />
    <dom>
        <app args="root">
            <dom>
                <app args="m3fs mem $fs.size" daemon="1">
                    <serv name="m3fs" />
                    <physmem addr="0" size="$fs.size" />
                </app>
            </dom>
            <dom>
                <app args="pager maxcli=4 $fs.size">
                    <sess name="m3fs" />
                    <physmem addr="0" size="$fs.size" perm="r" />
                    <pes type="rocket|core" count="1" />
                    <pes type="boom|core" count="3" />
                    <dom pe="boom|core">
                        <app args="/bin/net -d lo -m 2 net 127.0.0.1" daemon="1">
                            <serv name="net" />
                        </app>
                    </dom>
                    <dom pe="rocket|core">
                        <app args="/bin/vamic /testcase1.wav" daemon="1">
                            <mount fs="m3fs" path="/" />
                            <serv name="vamic" />
                        </app>
                    </dom>
                    <dom pe="boom|core">
                        <app args="/bin/vasnd -w 2 -r 8 -p udp 127.0.0.1 1337">
                            <sess name="net" args="bufs=1M socks=1 ports=2000" />
                            <sess name="vamic" />
                        </app>
                    </dom>
                    <dom pe="boom|core">
                        <app args="/bin/varcv udp 1337" daemon="1">
                            <sess name="net" args="bufs=1M socks=1 ports=1337" />
                        </app>
                    </dom>
                </app>
            </dom>
        </app>
    </dom>
</config>
