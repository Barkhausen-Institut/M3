<config>
    <kernel args="kernel -f $fs.path" />
    <dom>
        <app args="root">
            <dom>
                <app args="m3fs mem $fs.size" daemon="1">
                    <serv name="m3fs" />
                    <physmem addr="0" size="$fs.size" />
                </app>
            </dom>
            <dom>
                <app args="pager maxcli=4 $fs.size" usermem="768M">
                    <sess name="m3fs" />
                    <physmem addr="0" size="$fs.size" perm="r" />
                    <tiles type="boom+nic|core" count="1" />
                    <tiles type="boom|core" count="2" />
                    <dom tile="boom|core">
                        <app args="/bin/lvldbserver /tmp/foo 1 tcu">
                            <sess lname="m3fs" gname="m3fs" />
                            <rgate name="req" msgsize="2048" slots="1" />
                        </app>
                    </dom>
                    <dom tile="boom+nic|core">
                        <app args="/bin/ycsbclient tcu /data/long-read-workload.wl 1" daemon="1">
                            <sess lname="m3fs" gname="m3fs" />
                            <sgate name="req" />
                        </app>
                    </dom>
                </app>
            </dom>
        </app>
    </dom>
</config>
