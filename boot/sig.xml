<config>
    <kernel args="kernel -f $fs.path" />
    <dom>
        <app args="root">
            <dom>
                <app args="m3fs mem $fs.size" daemon="1">
                    <serv name="m3fs" />
                    <physmem addr="0" size="$fs.size" />
                </app>
            </dom>
            <dom>
                <app args="sig" daemon="1">
                    <serv name="sig" />
                </app>
            </dom>
            <dom>
                <app args="pager $fs.size" usermem="256M" getinfo="1">
                    <sess name="m3fs" />
                    <sess name="sig" />
                    <physmem addr="0" size="$fs.size" perm="r" />
                    <tiles type="core" count="1" />
                    <dom>
                        <app args="/bin/sigtest" hash="foo" />
                    </dom>
                </app>
            </dom>
        </app>
    </dom>
</config>
