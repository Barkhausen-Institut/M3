<config>
    <kernel args="kernel -b net0-net1" />
    <app args="root sem=net">
        <dom>
            <app args="netrs net0 127.0.0.1 255.255.255.0" daemon="1">
                <serv name="net0" />
                <pes type="nic" />
            </app>
        </dom>
        <dom>
            <app args="netrs net1 127.0.0.2 255.255.255.0" daemon="1">
                <serv name="net1" />
                <pes type="nic" />
            </app>
        </dom>
        <dom>
            <app args="echorsclient" daemon="1">
                <sess name="net0" />
                <sem name="net" />
            </app>
        </dom>
        <dom>
            <app args="echorsserver">
                <sess name="net1" />
                <sem name="net" />
            </app>
        </dom>
    </app>
</config>
