<config>
    <kernel args="kernel -f $fs.path" />
    <dom>
        <app args="root">
            <dom>
                <app args="m3fs mem $fs.size" daemon="1">
                    <serv name="m3fs" />
                    <physmem addr="0" size="$fs.size" />
                </app>
            </dom>
            <dom>
                <app args="pager maxcli=4 sem=net $fs.size">
                    <sess name="m3fs" />
                    <physmem addr="0" size="$fs.size" perm="r" />
                    <pes type="core" count="4" />
                    <dom>
                        <app args="/bin/m3fs -m 1 mem $fs.size" daemon="1">
                            <serv lname="m3fs" gname="app_m3fs" />
                            <physmem addr="0" size="$fs.size" />
                        </app>
                    </dom>
                    <dom>
                        <app args="/bin/net -d lo net0 127.0.0.1" daemon="1">
                            <serv name="net0" />
                        </app>
                    </dom>
                    <dom>
                        <app args="/bin/lvldbserver /tmp/foo">
                            <sess name="net0" args="bufs=1M socks=1 ports=1337" />
                            <sem name="net" />
                            <sess lname="m3fs" gname="app_m3fs" />
                        </app>
                    </dom>
                    <dom>
                        <app args="/bin/ycsbclient /data/workload.wl">
                            <sess name="net0" args="bufs=1M socks=1 ports=1337" />
                            <sess lname="m3fs" gname="app_m3fs" />
                            <sem name="net" />
                        </app>
                    </dom>
                </app>
            </dom>
        </app>
    </dom>
</config>
