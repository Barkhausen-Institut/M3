<config>
    <kernel args="kernel -f $fs.path" />
    <dom>
        <app args="root sem=net">
            <dom>
                <app args="net net0 127.0.0.1 lo" daemon="1">
                    <serv name="net0" />
                </app>
            </dom>
            <dom>
                <app args="m3fs mem $fs.size" daemon="1">
                    <serv name="m3fs" />
                    <physmem addr="0" size="$fs.size" />
                </app>
            </dom>
            <dom>
                <app args="pager $fs.size sem=net">
                    <sess name="m3fs" />
                    <physmem addr="0" size="$fs.size" perm="r" />
                    <pes type="core" count="2" />
                    <dom>
                        <app args="/bin/lvldbserver /tmp/foo">
                            <sess name="net0" args="bufs=1M socks=1 ports=1337" />
                            <sem name="net" />
                            <mount fs="m3fs" path="/" />
                        </app>
                    </dom>
                    <dom>
                        <app args="/bin/ycsbclient">
                            <sess name="net0" args="bufs=1M socks=1 ports=1337" />
                            <sess name="m3fs" />
                            <pes type="core" count="1" />
                            <sem name="net" />
                        </app>
                    </dom>
                </app>
            </dom>
        </app>
    </dom>
</config>
