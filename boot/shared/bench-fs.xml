<config>
    <mods>
        <mod name="fs" file="bench.img" />
    </mods>
    <kernel args="kernel" />
    <dom>
        <app args="root">
            <app args="m3fs mem" daemon="1">
                <serv name="m3fs" />
                <mod name="fs" />
            </app>
            <dom tile="perf|core">
                <app args="pager maxcli=2" usermem="768M">
                    <sess name="m3fs" />
                    <mod name="fs" perm="r" />
                    <mod name="tilemux" perm="r" />
                    <app args="/sbin/m3fs -e 64 -c -m 4 mem" daemon="1">
                        <serv lname="m3fs" gname="app_m3fs" />
                        <mod name="fs" />
                    </app>
                    <app args="/bin/fs">
                        <sess lname="m3fs" gname="app_m3fs" />
                    </app>
                </app>
            </dom>
        </app>
    </dom>
</config>
