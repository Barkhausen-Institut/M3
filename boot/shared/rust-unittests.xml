<config>
    <kernel args="kernel -f $fs.path" />
    <dom>
        <app args="root" />
        <app args="pipes" daemon="1">
            <serv name="pipes" />
        </app>
    </dom>
    <dom>
        <app args="m3fs mem $fs.size" daemon="1">
            <serv name="m3fs" />
            <physmem addr="0" size="$fs.size" />
        </app>
    </dom>
    <dom>
        <app args="pager -s /bin/subsys -s /bin/rustunittests">
            <sess name="m3fs" />
            <sess lname="m3fs-clone" gname="m3fs" />
            <sess name="pipes" />
            <pes type="core" count="2" />
        </app>
    </dom>
</config>
