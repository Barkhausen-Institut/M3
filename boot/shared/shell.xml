<config>
    <kernel args="kernel -f $fs.path" />
    <dom>
        <app args="root maxcli=4">
            <app args="vterm" daemon="1">
                <serv name="vterm" />
                <serial />
            </app>
            <app args="pipes -m 8" daemon="1">
                <serv name="pipes" />
            </app>
            <dom>
                <app args="m3fs -m 4 mem $fs.size" daemon="1">
                    <serv name="m3fs" />
                    <physmem addr="0" size="$fs.size" />
                </app>
                <app args="net -m 4 -d lo net 127.0.0.1" daemon="1">
                    <serv name="net" />
                </app>
            </dom>
            <dom>
                <app args="pager maxcli=4 $fs.size" usermem="256M" getinfo="1">
                    <sess name="m3fs" />
                    <physmem addr="0" size="$fs.size" perm="r" />
                    <pes type="core" count="1" />
                    <app args="/bin/shell" getinfo="1">
                        <mount fs="m3fs" path="/" />
                        <sess name="pipes" />
                        <sess name="vterm" />
                        <sess name="net" args="bufs=256K" />
                        <pes type="core" count="3" />
                        <pes type="rot13" count="2" optional="1" />
                    </app>
                </app>
            </dom>
        </app>
    </dom>
</config>
