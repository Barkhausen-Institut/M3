<config>
    <kernel args="kernel -f $fs.path" />
    <dom>
        <app args="root">
            <dom>
                <app args="m3fs mem $fs.size" daemon="1">
                    <serv name="m3fs" />
                    <physmem addr="0" size="$fs.size" />
                </app>
            </dom>
            <dom>
                <app args="pager maxcli=3 $fs.size">
                    <sess name="m3fs" />
                    <physmem addr="0" size="$fs.size" perm="r" />
                    <pes type="core" count="1" />
                    <app args="/bin/net -d lo -m 1 net 192.168.42.242" daemon="1">
                        <serv name="net" />
                    </app>
                    <dom>
                        <app args="/bin/vamic /testcase1.wav" daemon="1">
                            <mount fs="m3fs" path="/" />
                            <serv name="vamic" />
                        </app>
                    </dom>
                    <app args="/bin/vasnd 192.168.42.15 1337">
                        <sess name="net" args="bufs=1M socks=1 ports=2000" />
                        <sess name="vamic" />
                    </app>
                </app>
            </dom>
        </app>
    </dom>
</config>
