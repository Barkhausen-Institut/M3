<config>
    <env>M3_FS=bench.img</env>
    <kernel args="kernel" />
    <dom>
        <app args="root">
            <dom>
                <app args="m3fs mem $fs.size" daemon="1">
                    <serv name="m3fs" />
                    <physmem addr="0" size="$fs.size" />
                </app>
            </dom>
            <dom>
                <app args="pager $fs.size">
                    <sess name="m3fs" />
                    <physmem addr="0" size="$fs.size" perm="r" />
                    <tiles type="boom|core" count="1" />
                    <dom tile="boom|core">
                        <app args="/bin/ipc" time="1s">
                            <mount fs="m3fs" path="/" />
                            <tiles type="boom|core" count="1" />
                        </app>
                    </dom>
                </app>
            </dom>
        </app>
    </dom>
</config>
