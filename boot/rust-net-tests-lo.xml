<config>
    <kernel args="kernel -f $fs.path" />
    <dom>
        <app args="root">
            <dom>
                <app args="m3fs mem $fs.size" daemon="1">
                    <serv name="m3fs" />
                    <physmem addr="0" size="$fs.size" />
                </app>
            </dom>
            <dom>
                <app args="net -m 3 -d lo net 127.0.0.1" daemon="1">
                    <serv name="net" />
                </app>
            </dom>
            <dom>
                <app args="pager sem=net-udp sem=net-tcp $fs.size">
                    <sess name="m3fs" />
                    <physmem addr="0" size="$fs.size" perm="r" />
                    <pes type="core" count="2" />
                    <dom>
                        <app args="/bin/netechoserver" daemon="1">
                            <sess lname="net1" gname="net" args="bufs=1M socks=2 ports=1337,1338" />
                            <sem name="net-udp" />
                            <sem name="net-tcp" />
                        </app>
                    </dom>
                    <dom>
                        <app args="/bin/rustnettests 127.0.0.1 127.0.0.1 127.0.0.1">
                            <sess lname="net0" gname="net" args="bufs=64K socks=2 ports=2000-2001" />
                            <sess lname="net1" gname="net" args="bufs=64K socks=2 ports=3000" />
                            <pes type="core" count="1" />
                            <sem name="net-udp" />
                            <sem name="net-tcp" />
                        </app>
                    </dom>
                </app>
            </dom>
        </app>
    </dom>
</config>
