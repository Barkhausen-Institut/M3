<config>
    <kernel args="kernel -f $fs.path" />
    <app args="root">
        <dom>
            <app args="m3fs mem $fs.size" daemon="1">
                <serv name="m3fs" />
                <physmem addr="0" size="$fs.size" />
            </app>
        </dom>
        <dom>
            <app args="pager">
                <sess name="m3fs" />
                <pes type="core" count="1" />
                <dom>
                    <app args="/bin/bench-scale -i 4 -r 1 empty">
                        <mount fs="m3fs" path="/" />
                        <pes type="core" count="4" />
                    </app>
                </dom>
            </app>
        </dom>
    </app>
</config>
