<config>
    <kernel args="kernel -f $fs.path" />
    <dom>
        <app args="root" />
    </dom>
    <dom>
        <app args="console" daemon="1">
            <serv name="vga" />
            <serv name="keyb" />
        </app>
    </dom>
    <dom>
        <app args="timer" daemon="1">
            <serv name="timer" />
        </app>
    </dom>
    <dom>
        <app args="m3fs mem $fs.size" daemon="1">
            <serv name="m3fs" />
            <mem addr="0" size="$fs.size" />
        </app>
    </dom>
    <dom>
        <app args="pager /bin/asciiplay /movies/starwars.txt">
            <sess name="timer" />
            <sess name="vga" />
            <sess name="keyb" />
            <sess name="m3fs" />
            <pes type="core" />
        </app>
    </dom>
</config>
