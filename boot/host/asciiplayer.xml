<config>
    <kernel args="kernel -f $fs.path" />
    <dom>
        <app args="root">
            <dom>
                <app args="console" daemon="1">
                    <serv name="vga" />
                    <serv name="keyb" />
                </app>
            </dom>
            <dom>
                <app args="timer" daemon="1">
                    <serv name="timer" />
                </app>
            </dom>
            <dom>
                <app args="m3fs mem $fs.size" daemon="1">
                    <serv name="m3fs" />
                    <physmem addr="0" size="$fs.size" />
                </app>
            </dom>
            <dom>
                <app args="/bin/asciiplay /movies/starwars.txt">
                    <sess name="timer" />
                    <sess name="vga" />
                    <sess name="keyb" />
                    <sess name="m3fs" />
                    <pes name="child" type="core" />
                </app>
            </dom>
        </app>
    </dom>
</config>
